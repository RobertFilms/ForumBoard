<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        
        body {
            display: flex;
            flex-direction: row;
            height: 100vh;
        }

        .chatbox {
            flex: 1;
            background-color: white;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
        }

        .input-container {
            display: flex;
            width: 100%;
            padding: 10px;
            box-sizing: border-box;
        }

        .messagebox {
            flex: 1;
            height: 30px;
        }

        .user-list {
            width: 10%;
            background-color: grey;
            display: flex;
            flex-direction: column;
            padding: 10px;
            box-sizing: border-box;
        }

        li {
            list-style-type: none;
            color: black;
            margin-bottom: 5px;
        }

        li p {
            padding: 0;
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="chatbox">
        <ul id="messages-list">
            <!-- Messages will go here -->
        </ul>
        <div class="input-container">
            <input class="messagebox" id="messageInput">
            <button id="sendButton" onclick="send()">Send</button>
        </div>
    </div>

    <div class="user-list">
        <ul id="user-list">
            <li>
                <p>Users:</p>
            </li>
        </ul>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();  // Connect to the Socket.io server
        const name = "<%= username %>";

        // Emit the name when the user connects
        socket.emit('new user', name);

        // Send a new message to the server
        function send() {
            const textElement = document.getElementById("messageInput");
            const text = textElement.value;
            textElement.value = "";

            // Emit the chat message to the server
            socket.emit('chat message', {
                name,
                text
            });
        }

        // Listen for updates to the user list
        socket.on('update users', (users) => {
            const userList = document.getElementById("user-list");
            userList.innerHTML = "<li><p>Users:</p></li>";

            for (const user of users) {
                const li = document.createElement("li");
                const p = document.createElement("p");
                p.textContent = user;
                li.appendChild(p);
                userList.appendChild(li);
            }
        });

        // Listen for updates to the message list
        socket.on('update messages', (messages) => {
            const messageList = document.getElementById("messages-list");
            messageList.innerHTML = "";  // Clear existing messages

            for (const message of messages) {
                const li = document.createElement("li");
                const p = document.createElement("p");
                p.textContent = `${message.name}: ${message.text}`;
                li.appendChild(p);
                messageList.appendChild(li);
            }
        });
    </script>
</body>
</html>
